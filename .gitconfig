[alias]
        st  = status
        pr  = pull --rebase
        dc  = diff --cached
        dcw = diff --cached --color-words
        dw  = diff --color-words
        cm = commit -m
        fix = commit --amend
        pfl = push --force-with-lease
        list-files = diff-tree --no-commit-id --name-status -r
        graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
        update = "!echo '==> Stash local changes'; res=$(git stash save 'auto stash by update'); echo "$res"; echo; \
                   echo '==> Fetch from remote repo and merge/rebase'; git pull --rebase; echo; \
                   echo "$res" | grep -q '^No local changes to save' \
                   || { echo '==> Apply stashed changes'; git stash pop; }"
        prune-local-branches = "!git checkout master && git branch --merged | grep -v \"\\*\" | xargs -n 1 git branch -d || echo \"-- No local merged branches --\""
